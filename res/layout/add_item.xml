<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
     >

        <Button
            android:id="@+id/add_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/add_item_num"
            android:background="@drawable/bt_shape2"
            android:text="X"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/add_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/add_item_delete"
            android:layout_below="@+id/add_item_delete"
            android:text="54878787687"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/add_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/tv_shape"
            android:paddingLeft="4dp"
            android:text="1"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/add_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/add_item_delete"
            android:layout_alignBottom="@+id/add_item_delete"
            android:layout_toRightOf="@+id/add_item_num"
            android:paddingLeft="15dp"
            android:text="54878787687"
            android:textColor="#000000" />

</RelativeLayout>
