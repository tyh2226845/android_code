<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/mi" >
   <Button 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/in_upload"
       android:text="入库上传"
       android:background="@drawable/bt_shape_in"
       /> 
        <Button 
            android:layout_marginTop="20dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/out_upload"
       android:text="出库上传"
       android:background="@drawable/bt_shape_out"
       /> 
       <Button 
       android:layout_marginTop="20dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/out_back"
       android:text="返回上级"
       android:background="@drawable/bt_shape_query"
       />

</LinearLayout>
